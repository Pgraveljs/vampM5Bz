<div class="row">
    <div class="col-md-8">
        <div class="card bg-dark text-white rounded-3">

            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col">Difficulté de l'action</th>
                        <th scope="col">Valeur de la difficulté</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rule in listRules)
                    {
                        <tr>
                            <td scope="row">@rule.Description</td>
                            <td>@rule.Difficulty</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-4">
        <div class=" card bg-dark text-white p-2 rounded-3">
            <div class="d-flex flex-wrap justify-content-center">
                <h4 class="mt-2">@Critiques.Titre</h4>
            </div>
            <hr />
            <div>
                <div class="card-textS">@Critiques.Description</div>
                <hr />
                <div class="card-textS">(1-5) Échec</div>
                <div class="card-textS">(6-9) Réussite</div>
                <div class="card-textS">(10) Réussite</div>
                <div class="card-textS">(2*10) Réussite critique ajoute 2 réussites</div>
            </div>
        </div>
    </div>
</div>



@code {
    private List<SimpleRule> listRules { get; set; } = new();
    private SimpleRule Critiques { get; set; } = new SimpleRule("", "", "");


    protected override async Task OnInitializedAsync()
    {
        listRules.Add(new SimpleRule("", "Anodine (toucher une cible immobile, convaincre un ami loyal de vous aider)", "Une réussite"));
        listRules.Add(new SimpleRule("", "Simple (séduire quelqu’un qui ne demande que ça, intimider quelqu’un de peureux)", "Deux réussites"));
        listRules.Add(new SimpleRule("", "Modérée (remplacer le système audio d’une voiture, marcher sur une corde raide)", "Trois réussites"));
        listRules.Add(new SimpleRule("", "Délicate (trouver la source d’un murmure, créer une œuvre d’art mémorable)", "Quatre réussites"));
        listRules.Add(new SimpleRule("", "Difficile (convaincre un policier que ce n’est pas votre cocaïne, réparer un bloc moteur défoncé)", "Cinq réussites"));
        listRules.Add(new SimpleRule("", "Très difficile (courir sur une corde raide en essuyant des coups de feu, calmer une foule hostile et violente)", "Six réussites"));
        listRules.Add(new SimpleRule("", "Presque impossible (trouver un SDF en particulier à Los Angeles en une nuit, réciter sans erreur un long texte dans une langue que vous ne parlez pas)", "Sept réussites ou plus"));

        Critiques = new SimpleRule("Critiques", "Un résultat de 10 sur deux dés ordinaires (0 " +
        "et 0) est une réussite critique. Une réussite critique compte " +
        "comme deux réussites supplémentaires en plus des deux " +
        "10 (quatre réussites au total) : votre personnage accomplit " +
        "sa tâche bien plus vite, avec beaucoup plus d’élégance ou " +
        "bien plus méticuleusement que la normale.", "");
    }
}
