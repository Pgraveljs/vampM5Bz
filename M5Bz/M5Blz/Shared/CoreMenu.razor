@implements IDisposable
<a href="/">
    <img src="/icons/victorian-house.png" alt="Image" height="55">
</a>


@if (appData?.Id is not 0)
{
    <span class="float-end mt-4">
        @appData.FirstName
        @appData.LastName
        <img @onclick="Deconnexion" src="/icons/le-crane.png" alt="Image" height="25">
    </span>
}
else
{
    <span class="float-end mt-4">
        Identification requise ...
    </span>
}
<br />
<hr />

@code {

    private void Deconnexion()
    {
        appData.SetUser(new UserModel());
        NavManager.NavigateTo("/");
    }

    protected override void OnInitialized()
    {
        appData.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        appData.OnChange -= StateHasChanged;
    }
}
